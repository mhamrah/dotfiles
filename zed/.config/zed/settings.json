// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "CommitMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine",
    "dark": "Rosé Pine"
  },
  "context_servers": {
    "cloudflare-web": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://browser.mcp.cloudflare.com/sse"
      ]
    },
    "cloudflare-builds": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://builds.mcp.cloudflare.com/sse"
      ]
    },
    "cloudflare-docs": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/sse"
      ]
    },
    "cloudflare-workers": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://bindings.mcp.cloudflare.com/sse"
      ],
      "env": {}
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-61dbb452-2ce7-4a0a-b258-397b81126ffd"
      }
    }
  }
}
