# This is Git's per-user configuration file.

# Common shared settings across personal and work
[include]
	path = ~/dotfiles/git/common.gitconfig

# Personal identity and any personal-only tweaks
[user]
	name = Mike Hamrah
	email = m@hamrah.com
	signingkey = 022ACC3C17C985C0

[color]
	ui = true
[color "branch"]
	remote = yellow
[color "diff"]
	meta = yellow
[color "status"]
	added = green
	changed = yellow
	untracked = red

[credential]
	helper = 
	interactive = false
[credential "https://dev.azure.com"]
	useHttpPath = true
[credential "https://github.com"]
	provider = github

# Repo-specific overrides for this dotfiles repo (load last to take precedence)
[includeIf "gitdir:~/dotfiles/"]
	path = ~/dotfiles/git/dotfiles.gitconfig
